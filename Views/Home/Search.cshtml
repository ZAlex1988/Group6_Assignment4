@model SearchViewModel

@{
    ViewData["Title"] = "Search";
}

@section custom_js_css {
    <link href="/CSS/FormStyles.css" rel="stylesheet" type="text/css">
    <script src="/js/Search.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.js"></script>
}



<div class="bodycont">
    <h1 align="center">National Park Search</h1>
    <p id="intro">Search for a park to get some information about the park. You can see how many campgrounds are available and select the one you would like to reserve.</p>
    <p id="intro">If you want to modify your existing reservation please go to our <a href="Reservations.html">Reservations</a> page.</p>


    <div class="search_park_form_div">
        <div class="form_lines">
            <label>Description:</label> <input type="search" id="park_name" class="field-long" />
        </div>
        <div class="form_lines">
            <label>State: </label>
            <select name="states" id="park_state" class="field-long">
                <option value="" text="" />
                @foreach (string state in @Model.states)
                {
                    <option value="@state">@state</option>
                }
            </select>
        </div>
        <div class="form_lines">
            <label>Park Name: </label>
            <select name="park_codes" id="park_code" class="field-long">
                <option value="" text="" />
                @foreach (ParksAndCodes parksAndCodes in @Model.parkCodes)
                {
                    <option value="@parksAndCodes.parkCode">@parksAndCodes.parkName</option>
                }
            </select>
        </div>
        <div class="form_lines"><button id="search_click" type="submit">Search</button></div>
    </div>

    <div class="results">
        <div class="output">
        </div>
    </div>

    <canvas id="chart" width="150" height="50"></canvas>

</div>